<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:translationZ="@dimen/cardview_default_radius"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/mo_list_schema_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mo_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="1dp"
            android:layout_weight="3"
            android:padding="10dp"
            android:text="MO Number"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/mo_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="1dp"
            android:layout_weight="3"
            android:padding="10dp"
            android:text="Mo_Status"
            android:textAlignment="center" />

        <LinearLayout
            android:id="@+id/mo_list_button_group"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="horizontal">

            <Button

                android:id="@+id/mo_edit_button"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:background="@drawable/ic_edit_mo_black"
                android:padding="1dp"
                android:textAlignment="center" />

            <Button
                android:id="@+id/mo_delete_button"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:background="@drawable/ic_delete_mo_black"
                android:padding="1dp" />

            <Button
                android:id="@+id/mo_zone_button"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:background="@drawable/ic_zone_change_black"
                android:padding="1dp" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>